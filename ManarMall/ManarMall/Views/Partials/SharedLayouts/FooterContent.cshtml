@using ManarMall.Models;
@using Umbraco.Web.Models;
@using Umbraco.Web;
@using umbraco.cms.businesslogic.web;
@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@inherits UmbracoViewPage<ManarMall.Model.ContactModel>
@{
